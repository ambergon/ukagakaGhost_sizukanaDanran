//{{{
// 起動処理---------------------------------------------------------
AutoLoad.talk_HN {
    if ISVAR( "HN.ModeCount" ) == 0 {
        HN.ModeCount = 0
    }
    // 一度のサイクルで行う意味のあるトークの上限
    HN.ModeCountMax = 6
    Load.HN()
}
//}}}
//{{{
// 終了処理---------------------------------------------------------
AutoUnload.talk_HN {
    ERASEVAR( 'HN.ModeCount' )
    ERASEVAR( 'HN.ModeCountMax' )
    Unload.HN()
}
