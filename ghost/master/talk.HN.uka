//{{{
// Unload  HN : 頭撫でトークを削除----------------------------------
Unload.HN {

    // セーブデータに残らないようにする。
    _Count = 0
    while 1 {
        _null = EVAL( "HN" + _Count )
        // なくなれば終了。
        if _null == "" {
            break
        }
        ERASEVAR( "HN" + _Count )
        _Count++
    }

}
//}}}
//{{{
// HN.MainTalk : 頭撫でトークを出力---------------------------------
HN.MainTalk {

    // 意味のあるトークは一サイクルで6回まで。
    if HN.ModeCount < HN.ModeCountMax {
        HN.ModeCount++

        // 次があるか確認する。
        _req = EVAL( "HN" + TOINT( HN.TalkCount + 1 ) )
        if _req != "" {
            HN.TalkCount++
            _req

        // 意味のないトーク
        } else {
            HN.OtherTalk()
        }

    // 意味のないトーク
    } else {
        HN.OtherTalk()
    }
}
